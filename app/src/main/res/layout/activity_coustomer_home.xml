<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coustomerHome">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/madeira_portugal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al-Ajaji Hotel"
            android:layout_marginBottom="50dp"
            android:textSize="45dp"
            android:fontFamily="@font/gist_light"
            android:layout_margin="10dp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowColor="@color/black"
            android:shadowRadius="0.9"
            />
        <Button
            style="@style/btnStyle"
            android:text="Check In"
            android:id="@+id/checkIn"
            android:onClick="viewRoom"
            />
        <Button
            style="@style/btnStyle"
            android:text="Check Out"
            android:id="@+id/checkOut"
            android:onClick="checkOutclick"
            />



    </LinearLayout>
</FrameLayout>